<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--person info style-->
    <style name="PersonInfoItem" parent="android:Widget">
        <!-- Customize your theme here. -->
        <item name="android:padding">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PersonInfoItem.name" parent="android:Widget">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/font_size_tiny</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PersonInfoItem.value" parent="android:Widget">
        <!-- Customize your theme here. -->
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
    </style>
    <style name="PersonInfoItemLoading" parent="android:Widget">
        <!-- Customize your theme here. -->
        <item name="android:background">#8ccc</item>
        <item name="android:radius">4dip</item>
        <item name="android:layout_marginTop">12dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18dip</item>
    </style>

</resources>
