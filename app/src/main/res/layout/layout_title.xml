<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_title_height"
                android:background="@drawable/ic_titlebar">

    <TextView
        android:id="@+id/tv_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="标题"
        android:textColor="@color/white"
        android:textSize="@dimen/layout_title_text_size"/>

    <RelativeLayout
        android:id="@+id/title_left"
        android:layout_width="@dimen/layout_title_left_w"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/layout_title_left_icon_w"
            android:layout_height="@dimen/layout_title_left_icon_h"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_back"/>
    </RelativeLayout>

</RelativeLayout>